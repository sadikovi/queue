{
  "version": "0.0.1",
  "name": "queue",
  "description": "Improved job scheduler for Apache Spark",
  "author": "Ivan Sadikov",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/sadikovi/queue.git"
  },
  "bugs": {
    "url": "https://github.com/sadikovi/queue/issues"
  },
  "scripts": {
    "_compile_sass": "node-sass web/scss/index.scss --include-path node_modules --output-style compressed web/static/index.min.css",
    "_copy_octicons": "cp node_modules/octicons/octicons/*.{eot,svg,ttf,woff} web/static",
    "setup": "if [ ! -d \"node_modules\" ]; then npm install; fi; if [ ! -d \"web/static\" ]; then mkdir -p web/static; fi",
    "build": "npm run _copy_octicons && npm run _compile_sass",
    "lint": "coffeelint -f coffeelint.json web/coffee",
    "compile": "browserify -t [coffeeify --no-header --compile] --extension='.coffee' web/coffee/*.coffee | uglifyjs - -o web/static/index.min.js -c -m",
    "test": "jasmine-node --coffee web/spec",
    "publish": "npm run setup && npm run build && npm run lint && npm run test && npm run compile"
  },
  "dependencies": {
    "octicons": "^3.5.0"
  },
  "devDependencies": {
    "coffee-script": "^1.10.0",
    "node-sass": "^3.7.0",
    "uglifyjs": "^2.3.0",
    "coffeelint": "1.15.0",
    "jasmine-node": "^1.14.5",
    "browserify": "^13.0.1",
    "coffeeify": "^2.0.1"
  },
  "keywords": [
    "queue",
    "spark"
  ]
}
